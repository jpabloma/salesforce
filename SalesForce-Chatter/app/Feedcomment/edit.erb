<div class="pageTitle">
  <h1>Edit <%= @feedcomment.foo %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :show, :id => @feedcomment.object %>">Cancel</a>
  </div>
  <div class="rightItem regularButton">
    <a class="button" href="<%= url_for :action => :delete, :id => @feedcomment.object %>">Delete</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @feedcomment.object %>"/>
    <ul>
      
          <li>
            <label for="feedcomment[foo]" class="fieldLabel">Foo</label>
            <input type="text" name="feedcomment[foo]" value="<%= @feedcomment.foo %>" <%= placeholder( "Foo" ) %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Update"/>
  </form>
</div>